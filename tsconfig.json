{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable", 
      "esnext"
    ],
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "es6",
    "outDir": "lib",
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}